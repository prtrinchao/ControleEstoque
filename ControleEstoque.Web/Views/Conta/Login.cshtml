@model ControleEstoque.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="container" style="margin-top:80px;">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Entrar no Sistema </strong></h3>

            </div>

            <div class="panel-body">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div style="margin-bottom: 12px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", @placeholder = "Login" })
                            @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                        </div>

                        <div style="margin-bottom: 12px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Senha" })
                            @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })

                        </div>

                        <div style="margin-bottom: 12px" class="input-group">
                            <div class="checkbox" style="margin-top: 0px;">
                                <label>
                                    @Html.CheckBoxFor(m => m.LembrarMe)
                                    @Html.LabelFor(m => m.LembrarMe)
                                </label>
                            </div>
                        </div>

                        
                            <button style="margin-bottom: 20px" type="submit" class="btn btn-success">Entrar</button>
                            <hr style="margin-top:10px;margin-bottom:10px;">
                        

                    }
                </section>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
